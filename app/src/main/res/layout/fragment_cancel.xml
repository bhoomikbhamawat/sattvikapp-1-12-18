<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foreground"

    tools:context="com.example.shreyash.myapplication.com.jain.shreyash.myapplication.FragmentCancel">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >



    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerColor="@color/background"
        app:eventsEnabled="true"
        app:type="one_day_picker"
       />
<LinearLayout
    android:layout_width="match_parent"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/fadingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreground"

                android:layout_gravity="center"
                android:gravity="center"



                android:textSize="20dp"
                app:timeout="500"
                app:texts="@array/examples" />




        </LinearLayout>





    </LinearLayout>





</LinearLayout>
    <ListView
        android:id="@+id/listview_on_offline"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_btn_id"
                android:textSize="22dp"
               android:paddingTop="12dp"
                android:layout_gravity="left"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/add_button">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:background="@android:color/darker_gray"
        android:elevation="4dp"
        android:alpha=".2"
        android:layout_marginTop="4dp"

        android:fadingEdge="vertical"
        android:paddingTop="4dp"
        android:requiresFadingEdge="vertical"></View>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        android:padding="16dp"
        android:layout_marginTop="12dp"

        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/ic_rotate_left_black_24dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content"
                    android:text="Previous Cancellation Status"
                    android:textSize="12sp"
                    android:id="@+id/recent_cancel"
                  />






            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/darker_gray"
                android:elevation="1dp"

                android:fadingEdge="vertical"
                android:paddingTop="4dp"
                android:requiresFadingEdge="vertical"></View>




        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewcCancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>
</android.support.v4.widget.NestedScrollView>