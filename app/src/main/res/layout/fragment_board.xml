                app:contentPadding="1dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
               app:cardUseCompatPadding="true"
                >

            <android.support.v7.widget.CardView
                app:cardCornerRadius="12dp"
                android:padding="16dp"
               layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="12dp"
                    android:paddingRight="18dp"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:id="@+id/notice_board_text"
                        android:text="updating..."



                        android:textSize="18dp" />
                </LinearLayout>



            </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>


        </android.support.design.widget.AppBarLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:background="@color/foreground"
            android:elevation="4dp"

            android:fadingEdge="vertical"
            android:paddingTop="4dp"
            android:requiresFadingEdge="vertical"></View>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/menupic"
            android:scaleType="fitXY"/>

            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/foreground"
            app:tabGravity="fill"
            app:tabIndicatorColor="@android:color/holo_green_dark"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/holo_green_dark"
